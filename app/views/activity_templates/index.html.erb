<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All activities
    </h1>

    <a href="/activities/new" class="btn btn-block btn-outline-secondary">
      Add a new activity
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity type
        </th>

        <th>
          Date
        </th>

        <th>
          Duration
        </th>

        <th>
          Cost
        </th>

        <th>
          Property
        </th>

        <th>
          Detail
        </th>

        <th>
          Outcome
        </th>

        <th>
          Contact
        </th>

        <th>
          Subject
        </th>

        <th>
          Flyer img
        </th>

        <th>
          Postcard  img
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @activities.each do |activity| %>
      <tr>
        <td>
          <%= activity.id %>
        </td>

        <td>
          <%= activity.activity_type_id %>
        </td>

        <td>
          <%= activity.date %>
        </td>

        <td>
          <%= activity.duration %>
        </td>

        <td>
          <%= activity.cost %>
        </td>

        <td>
          <%= activity.property_id %>
        </td>

        <td>
          <%= activity.detail %>
        </td>

        <td>
          <%= activity.outcome %>
        </td>

        <td>
          <%= activity.contact %>
        </td>

        <td>
          <%= activity.subject %>
        </td>

        <td>
          <%= activity.flyer_img %>
        </td>

        <td>
          <%= activity.postcard__img %>
        </td>

        <td>
          <%= time_ago_in_words(activity.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(activity.updated_at) %> ago
        </td>

        <td>
          <a href="/activities/<%= activity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
