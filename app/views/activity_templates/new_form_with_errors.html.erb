<!-- Validation failure messages -->
<% if @activity.present? %>
  <% if @activity.errors.any? %>
    <% @activity.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new activity
</h1>


<hr>

<form action="/create_activity" method="post">

  <div class="form-group">
    <label for="activity_type_id">
      Activity type
    </label>

    <input type="text" id="activity_type_id" name="activity_type_id" class="form-control" value="<%= @activity.activity_type_id %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @activity.date %>">
  </div>

  <div class="form-group">
    <label for="duration">
      Duration
    </label>

    <input type="text" id="duration" name="duration" class="form-control" value="<%= @activity.duration %>">
  </div>

  <div class="form-group">
    <label for="cost">
      Cost
    </label>

    <input type="text" id="cost" name="cost" class="form-control" value="<%= @activity.cost %>">
  </div>

  <div class="form-group">
    <label for="property_id">
      Property
    </label>

    <input type="text" id="property_id" name="property_id" class="form-control" value="<%= @activity.property_id %>">
  </div>

  <div class="form-group">
    <label for="detail">
      Detail
    </label>

    <textarea id="detail" name="detail" class="form-control" rows="3"><%= @activity.detail %></textarea>
  </div>

  <div class="form-group">
    <label for="outcome">
      Outcome
    </label>

    <textarea id="outcome" name="outcome" class="form-control" rows="3"><%= @activity.outcome %></textarea>
  </div>

  <div class="form-group">
    <label for="contact">
      Contact
    </label>

    <input type="text" id="contact" name="contact" class="form-control" value="<%= @activity.contact %>">
  </div>

  <div class="form-group">
    <label for="subject">
      Subject
    </label>

    <textarea id="subject" name="subject" class="form-control" rows="3"><%= @activity.subject %></textarea>
  </div>

  <div class="form-group">
    <label for="flyer_img">
      Flyer img
    </label>

    <input type="text" id="flyer_img" name="flyer_img" class="form-control" value="<%= @activity.flyer_img %>">
  </div>

  <div class="form-group">
    <label for="postcard__img">
      Postcard  img
    </label>

    <input type="text" id="postcard__img" name="postcard__img" class="form-control" value="<%= @activity.postcard__img %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create activity
  </button>
</form>

<hr>

<a href="/activities">
  Go back
</a>
