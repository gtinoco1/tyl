<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <h4 class="text-uppercase text-secondary">
      Add a new activity
    </h4>
    <hr>

    <form action="/create_buyer_activity" method="post">

      <div class="form-row">
        
        <div class="form-group col-lg-4 mb-3">
          <label for="buyer_activity_type_id">
            Activity Type
          </label>
          <%= select_tag(:buyer_activity_type_id, options_from_collection_for_select(BuyerActivityType.order("title ASC").where(user_id: current_user.id), :id, :title,), :class => "form-control", :prompt => "Select type" ) %>
          <a href="/buyer_activity_types/new" class="">
            Add a type 
          </a>
        </div>

        <div class="form-group col-lg-4 mb-0">
          <label for="date">
            Date
          </label>
          <input type="date" id="date" name="date" class="form-control" value="<%= (Date.current - 1).strftime('%Y-%m-%d') %>">
        </div>

        <div class="form-group">
          <input type="hidden" name="buyer_id" class="form-control" value="<%= @buyer_id %>">
        </div>

      </div>

      <button class="btn btn-block btn-outline-secondary">
        Next
      </button>
    </form>

    <hr>

    <a href="/buyers/<%= @buyer_id %> ">
      Go back
    </a>

  </div>
</div>



