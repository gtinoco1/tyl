<!-- Validation failure messages -->
<% if @buyer_activity.present? %>
  <% if @buyer_activity.errors.any? %>
    <% @buyer_activity.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new buyer activity
</h1>


<hr>

<form action="/create_buyer_activity" method="post">

  <div class="form-group">
    <label for="duration">
      Duration
    </label>

    <input type="text" id="duration" name="duration" class="form-control" value="<%= @buyer_activity.duration %>">
  </div>

  <div class="form-group">
    <label for="property_address">
      Property address
    </label>

    <input type="text" id="property_address" name="property_address" class="form-control" value="<%= @buyer_activity.property_address %>">
  </div>

  <div class="form-group">
    <label for="zipcode">
      Zipcode
    </label>

    <input type="text" id="zipcode" name="zipcode" class="form-control" value="<%= @buyer_activity.zipcode %>">
  </div>

  <div class="form-group">
    <label for="detail">
      Detail
    </label>

    <input type="text" id="detail" name="detail" class="form-control" value="<%= @buyer_activity.detail %>">
  </div>

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <input type="text" id="comment" name="comment" class="form-control" value="<%= @buyer_activity.comment %>">
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @buyer_activity.image %>">
  </div>

  <div class="form-group">
    <label for="buyer_id">
      Buyer
    </label>

    <input type="text" id="buyer_id" name="buyer_id" class="form-control" value="<%= @buyer_activity.buyer_id %>">
  </div>

  <div class="form-group">
    <label for="buyer_activity_type_id">
      Buyer activity type
    </label>

    <input type="text" id="buyer_activity_type_id" name="buyer_activity_type_id" class="form-control" value="<%= @buyer_activity.buyer_activity_type_id %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @buyer_activity.date %>">
  </div>

  <div class="form-group">
    <label for="subject">
      Subject
    </label>

    <input type="text" id="subject" name="subject" class="form-control" value="<%= @buyer_activity.subject %>">
  </div>

  <div class="form-group">
    <label for="agent">
      Agent
    </label>

    <input type="text" id="agent" name="agent" class="form-control" value="<%= @buyer_activity.agent %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create buyer activity
  </button>
</form>

<hr>

<a href="/buyer_activities">
  Go back
</a>
