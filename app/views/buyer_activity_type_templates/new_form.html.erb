<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <h4 class="text-uppercase text-secondary">
      Add a new activity type
    </h4>
    <hr>
  </div>
</div>


<div class="row">
  <div class="col-lg-8 offset-lg-2">

      <%=form_for(@buyer_activity_type, url: create_buyer_activity_type_path(@buyer_activity_type)) do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, class: "form-control", value: current_user.id %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :duration_toggle, class: "form-control", value: "show" %>
        <input type="hidden" name="duration_toggle" class="form-control" value="Show">
      </div>

      <div class="form-group">
        <label for="title">
          Title
        </label>
        <%= f.text_field :title, :class => "form-control" %>
      </div>

      <div class="row mb-2">

        <!--<div class="col-lg-3">-->
        <!--  <label for="length_toggle">-->
        <!--    Duration (min)-->
        <!--  </label>-->
        <!--  <%= select_tag(:duration_toggle, options_for_select(["Show", "Hide"]), :class => "form-control") %>-->
