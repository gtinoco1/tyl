      <%= f.submit "Create activity type", class: "btn btn-block btn-outline-secondary" %>
      <!-- <button class="btn btn-block btn-outline-secondary">
        Create activity type
      </button> -->
      <% end %>

    <hr>

    <a href="/activity_types">
      Go back
    </a>

  </div>
</div>
