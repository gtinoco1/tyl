<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <h3 class="text-info text-uppercase">
      ALL Buyers
    </h3>
    <hr>
  </div>
</div>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">

    <% @buyers.where(user_id: current_user.id).each do |buyer| %>

      <div>
        <a href="buyers/<%= buyer.id %>">
          <button type="button" class="btn btn-secondary btn-lg btn-block mb-3 text-uppercase"> <%= buyer.name %></button>
        </a>
      </div>

    <% end %>

  </div>
</div>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <hr>
    <h5>
      <a href="/buyers/new" class="btn btn-block btn-outline-secondary">
        Add a new buyer
      </a>
    </h5>
  </div>
</div>
