<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <h4 class="text-info text-uppercase">
      Customers
    </h4>
    <hr>
  </div>
</div>

<% if current_user.buyers.where(buyer_type: "Buyer").where(status: "Active").or(current_user.buyers.where(buyer_type: "Buyer").where(status: "")).count > 0 %>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <h5 class="text-secondary text-uppercase">
      Buyers
    </h5>
  </div>
</div>

<% else %>
<% end %>

<% if current_user.buyers.where(status: "Active").or(current_user.buyers.where(status: "")).count == 0 %>
  <div class="row mb-3">
    <div class="col-lg-6 offset-lg-3">
      <h5 class="font-weight-light text-center text-uppercase">
        Add a customer to get started.
      </h5>
    </div>
  </div>
<% else %>
<% end %>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">

    <%  current_user.buyers.where(buyer_type: "Buyer").where(status: "Active").or(current_user.buyers.where(buyer_type: "Buyer").where(status: "")).each do |buyer| %>

      <div>
        <a href="buyers/<%= buyer.id %>">
          <button type="button" class="btn btn-secondary btn-lg btn-block mb-3 text-uppercase"> <%= buyer.name %></button>
        </a>
      </div>

    <% end %>

  </div>
</div>


<% if  current_user.buyers.where(buyer_type: "Tenant").where(status: "Active").or(current_user.buyers.where(buyer_type: "Buyer").where(status: "")).count > 0 %>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <h5 class="text-secondary text-uppercase">
      Tenants
    </h5>
  </div>
</div>

<% else %>
<% end %>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">

    <%  current_user.buyers.where(buyer_type: "Tenant").where(status: "Active").or(current_user.buyers.where(buyer_type: "Buyer").where(status: "")).each do |buyer| %>

      <div>
        <a href="buyers/<%= buyer.id %>">
          <button type="button" class="btn btn-secondary btn-lg btn-block mb-3 text-uppercase"> <%= buyer.name %></button>
        </a>
      </div>

    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <hr>
    <h5>
      <a href="/buyers/new" class="btn btn-block btn-outline-secondary">
        Add a new customer
      </a>
    </h5>
  </div>
</div>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3 text-center">
    <hr class="mt-2">
  <a class="font-weight-light" href="/archive">
    Archive
  </a>
  </div>
</div>
