<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Price #<%= @price.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/prices" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/prices/<%= @price.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit price
        </a>
      </div>

      <div class="col">
        <a href="/delete_price/<%= @price.id %>" class="btn btn-block btn-outline-secondary">
          Delete price
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Property
      </dt>
      <dd>
        <%= @price.property_id %>
      </dd>

      <dt>
        Amount
      </dt>
      <dd>
        <%= @price.amount %>
      </dd>

      <dt>
        Detail
      </dt>
      <dd>
        <%= @price.detail %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @price.date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@price.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@price.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

