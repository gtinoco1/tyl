<!-- Validation failure messages -->
<% if @property_attachment.present? %>
  <% if @property_attachment.errors.any? %>
    <% @property_attachment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new property attachment
</h1>


<hr>

<form action="/create_property_attachment" method="post">

  <div class="form-group">
    <label for="property_id">
      Property
    </label>

    <input type="text" id="property_id" name="property_id" class="form-control" value="<%= @property_attachment.property_id %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @property_attachment.user_id %>">
  </div>

  <div class="form-group">
    <label for="activity_id">
      Activity
    </label>

    <input type="text" id="activity_id" name="activity_id" class="form-control" value="<%= @property_attachment.activity_id %>">
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @property_attachment.image %>">
  </div>

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @property_attachment.title %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create property attachment
  </button>
</form>

<hr>

<a href="/property_attachments">
  Go back
</a>
