<div class="row mb-0">
  <div class="col-lg-6 offset-lg-3">
    <h5 class="text-info text-left text-uppercase mb-0">
      <%= @property_attachment.title %>
    </h5>
    <hr>
  </div>
</div>

<div class="row mb-3">
  <div class="col-lg-6 offset-lg-3">
    <div class="card bg-dark text-white">
      <img src="<%= @property_attachment.attachment %>" class="card-img" alt="...">
    </div>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-6 offset-md-3">
    <a href="/property_attachments/<%= @property_attachment.id %>/edit" class="btn btn-block btn-outline-secondary">
      Edit Attachment
    </a>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-6 offset-md-3">
    <a href="/properties/<%= @property_attachment.property_id %>/attachments" class="btn btn-block btn-outline-secondary">
      Go back
    </a>
  </div>
</div>
