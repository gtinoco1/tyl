      </div>

    <% end %>

  </div>
</div>

<% if current_user.buyers.where(status: "Archive").count > 0 %>

  <div class="row mb-3">
    <div class="col-lg-6 offset-lg-3">
      <hr>
      <h5 class="text-secondary text-uppercase">
        Customers
      </h5>
    </div>
  </div>

<% else %>
<% end %>

