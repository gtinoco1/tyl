<% if @property.errors.any? %>
  <% @property.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit property #<%= @property.id %>
</h1>

<hr>

<form action="/update_property/<%= @property.id %>" method="post">

  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @property.address %>">
  </div>

  <div class="form-group">
    <label for="realtor_id">
      Realtor
    </label>

    <input type="text" id="realtor_id" name="realtor_id" class="form-control" value="<%= @property.realtor_id %>">
  </div>

  <div class="form-group">
    <label for="city">
      City
    </label>

    <input type="text" id="city" name="city" class="form-control" value="<%= @property.city %>">
  </div>

  <div class="form-group">
    <label for="state">
      State
    </label>

    <input type="text" id="state" name="state" class="form-control" value="<%= @property.state %>">
  </div>

  <div class="form-group">
    <label for="zipcode">
      Zipcode
    </label>

    <input type="text" id="zipcode" name="zipcode" class="form-control" value="<%= @property.zipcode %>">
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @property.status %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update property
  </button>
</form>

<hr>

<a href="/properties">
  Go back
</a>
