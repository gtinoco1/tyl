<% if @property.errors.any? %>
  <% @property.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-6 offset-lg-2">
    <h4 class="text-secondary text-uppercase">
      Edit Property
      <hr>
    </h4>

  </div>
  <div class="col-lg-2">
    <a href="/delete_property/<%= @property.id %>" class="btn btn-block btn-outline-danger">
      Delete Property
    </a>
  </div>

</div>


<form action="/update_property/<%= @property.id %>" method="post">


  <!--<div class="mb-3">-->
  <!--  <div class="form-check">-->
  <!--    <input class="form-check-input" type="radio" name="status" id="exampleRadios1" value="Active" checked>-->
  <!--    <label class="form-check-label" for="exampleRadios1">-->
  <!--      Active-->
  <!--    </label>-->
  <!--  </div>-->
  <!--  <div class="form-check">-->
  <!--    <input class="form-check-input" type="radio" name="status" id="exampleRadios2" value="Archive">-->
  <!--    <label class="form-check-label" for="exampleRadios2">-->
  <!--      Archive-->
  <!--    </label>-->
  <!--  </div>-->
  <!--</div>-->

  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="form-group">
        <label for="address">
          Street Address
        </label>
        <input type="text" id="address" name="address" class="form-control" value="<%= @property.address %>">
      </div>

      <div class="row">

        <div class="col-lg-6">
          <div class="form-group">
            <label for="City">
              City
            </label>
            <input type="text" id="city" name="city" class="form-control" value="<%= @property.city %>">
          </div>
        </div>

        <div class="col-lg-2">
          <div class="form-group">
            <label for="State">
              State
            </label>
            <input type="text" id="state" name="state" class="form-control" value="<%= @property.state %>">
          </div>
        </div>

        <div class="col-lg-4">
          <div class="form-group">
            <label for="zipcode">
              Zipcode
            </label>
            <input type="text" id="zipcode" name="zipcode" class="form-control" value="<%= @property.zipcode %>">
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="hidden" name="realtor_id" class="form-control" value="<%= current_user.id %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 offset-lg-2">
      <div class="form-group">
        <label for="listing_type">
          Listing
        </label>
        <%= select_tag(:listing_type, options_for_select(["For Sale", "For Rent"], @property.listing_type), :class => "form-control") %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label for="listing_type">
          Status
        </label>
        <%= select_tag(:status, options_for_select(["Active", "Archive"], @property.status), :class => "form-control") %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <button class="btn btn-block btn-outline-success">
        Save Changes
      </button>
    </form>

    <hr>

    <a href="/all_properties" class="btn btn-block btn-outline-secondary">
      Go back
    </a>

  </div>
</div>
