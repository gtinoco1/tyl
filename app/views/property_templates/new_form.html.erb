<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <h4 class="text-secondary text-uppercase">
      Add a new property
    </h4>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 offset-lg-2">

    <form action="/create_property" method="post">

      <div class="form-group">
        <label for="address">
          Street Address
        </label>
        <input type="text" id="address" name="address" class="form-control">
      </div>

      <div class="row">

        <div class="col-lg-6">
          <div class="form-group">
            <label for="City">
              City
            </label>
            <input type="text" id="city" name="city" class="form-control">
          </div>
        </div>

        <div class="col-lg-2">
          <div class="form-group">
            <label for="State">
              State
            </label>
            <input type="text" id="state" name="state" class="form-control">
          </div>
        </div>

        <div class="col-lg-4">
          <div class="form-group">
            <label for="zipcode">
              Zipcode
            </label>
            <input type="text" id="zipcode" name="zipcode" class="form-control">
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="hidden" name="realtor_id" class="form-control" value="<%= current_user.id %>">
      </div>

      <div class="form-group">
        <input type="hidden" name="status" class="form-control" value="Active">
      </div>


      <button class="btn btn-block btn-outline-secondary">
        Create property
      </button>
    </form>

    <hr>

    <a href="/properties">
      Go back
    </a>

  </div>
</div>
