<!-- Validation failure messages -->
<% if @property.present? %>
  <% if @property.errors.any? %>
    <%# @property.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        * Required Field
      </div>
    <%# end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <h4 class="text-secondary text-uppercase">
      Add a new property
    </h4>
    <hr>
  </div>
</div>

<%=form_for(@property, url: create_property_path(@property)) do |f| %>
  <div class="row">
    <div class="col-lg-2 offset-lg-3">
      <div class="form-group">
        <label for="listing_type">
          Listing
        </label>
        <%= select_tag(:listing_type, options_for_select(["For Sale", "For Rent"], @property.listing_type), :class => "form-control") %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 offset-lg-3">

      <div class="form-group">
        <label for="address">
          Street Address
        </label>
        <%= f.text_field :address, :class => "form-control #{@property.errors[:address].present? ? 'error-class' : ''}" %>
        <!-- <input type="text" id="address" name="address" class="form-control"> -->
      </div>

      <div class="row">

        <div class="col-lg-6">
          <div class="form-group">
            <label for="City">
              City
            </label>
            <%= f.text_field :city, :class => "form-control" %>
            <!-- <input type="text" id="city" name="city" class="form-control"> -->
          </div>
        </div>

        <div class="col-lg-2">
          <div class="form-group">
            <label for="State">
              State
            </label>
            <%= f.text_field :state, :class => "form-control" %>
            <!-- <input type="text" id="state" name="state" class="form-control"> -->
          </div>
        </div>

        <div class="col-lg-4">
          <div class="form-group">
            <label for="zipcode">
              Zipcode
            </label>
            <%= f.text_field :zipcode, :class => "form-control" %>
            <!-- <input type="text" id="zipcode" name="zipcode" class="form-control"> -->
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.hidden_field :realtor_id, class: "form-control", value: current_user.id %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :status, class: "form-control", value: "Active" %>
        <!-- <input type="hidden" name="status" class="form-control" value="Active"> -->
      </div>

      <%= f.submit "Create propert", class: "btn btn-block btn-outline-success" %>
      <!-- <button class="btn btn-block btn-outline-success"> -->
        <!-- Create property -->
      <!-- </button> -->
    <% end %>

    <hr>

        <a href="/all_properties" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
  </div>
</div>
